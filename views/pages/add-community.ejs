<!DOCTYPE html>
<html lang="en">
<head>
      <% include ../partials/head %>    
</head>

<body class="sticky">
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div><!-- End Preload -->
    
    <!-- wrap Page -->
    <div id="wrap">
        
        <% include ../partials/header-top %>
        <header class="style2">
             <% include ../partials/header %>     
        </header><!-- End Header -->
       <section class="parallax-window" id="short"  data-parallax="scroll" data-image-src="/public/images/login.jpg">
            <div id="sub_header">
                <div class="container" id="sub_content">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>Contribute to Community</h1>
                            <div class="bread-crums">
                                <a href="/home">Home</a>
                                <span class="bread-crums-span">&raquo;</span>
                                <span class="current">Community</span>
                            </div><!-- End bread-crums -->
                        </div>
                    </div><!-- End row -->
                </div><!-- End container -->
            </div>
        </section>
        <!-- End SubHeader -->
        <div class="gray_bg">
            <div class="container margin_60">
                
    
                <div class="row">
                    
                    <div class="col-md-8 col-md-offset-2">
                            
    
                        <div class="form-login white_bg">
                            <div class="main_title">
                                <h2 class="nomargin_top">Contribute to Community</h2>
                                <hr class="divider">
                            </div>
                            <%- locals.flash %>
                            
                            <div class="alertMsgPost text-center"></div>
                            <form action="/community/addPost" method="post" id="addArticle">
                                <div class="form-group col-sm-12">
                                    <label for=""><strong>Posts Title</strong></label>
                                    
                                    <select required class="form-control" id="titlePost" name="titlePost">
                                    <option value="" disabled selected hidden>Select Title</option>
                                    <% for (var i=0;i < community.length ; i++ ) { %>
                                    <option value="<%= community[i].community_id %>"><%= community[i].title %></option>
                                    <% } %>
                                  </select>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label for=""><strong>Description</strong></label>
                                    <textarea rows="7" class="form-control"  required="required" name="descriptionPost" id="descriptionPost"></textarea>
                                </div>
                                <div class="clearfix"></div>
                            <div class="mt30 col-sm-12 text-left">
                                <button type="submit" class="btn  btn-primary" >Publish</button>
                                
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
    
            </div><!-- End container -->
        </div><!-- End white_bg -->
        <!-- newslatter -->
        <section class="newslatter">
            <div class="container">
                <div class="col-md-9">
                    <p>Stay Always Updated With us. Sign in with our newsletter</p>
                </div>
                <div class="col-md-3">
                <div class="subcribe">
                    <input type="text" class="form-control" placeholder="Your Email">
                    <a class="fa fa-paper-plane" href="javascript:void(0);"></a>
                </div>
                </div>
            </div>
        </section><!-- End newslatter -->
        
        <!-- Footer -->
<footer>
            <% include ../partials/footer %>
        </footer><!-- End Footer -->
    </div><!-- End wrap Page -->
    <!-- go-up -->
    <div class="go-up"><i class="fa fa-chevron-up"></i></div>
    <!-- End go-up -->
    
    <!-- COMMON SCRIPTS -->
    <% include ../partials/scripts %>

</body>
</html>
<script>
    $('#addArticle').validate();
    $('#flashAlert').delay(5000).fadeOut('slow');
</script>
