<script type="text/javascript">
	    
    var connection = new RTCMultiConnection();
    console.log(connection);
    // this line is VERY_important
    connection.socketURL = 'https://rtcmulticonnection.herokuapp.com:443/';

    // all below lines are optional; however recommended.

    connection.session = {
        audio: true,
        video: true
    };

    connection.sdpConstraints.mandatory = {
        OfferToReceiveAudio: true,
        OfferToReceiveVideo: true
    };

    
    function onlineTeaching(roomid){
	connection.checkPresence(roomid, function(isRoomExists, roomid) {
        connection.onstream = function(event) {
            $('#videoChat').html(event.mediaElement);
            $('#videoChat').find('video').css({width:'100%'});
        };
	console.log(isRoomExists,' === ',roomid);
        if(isRoomExists) {
            connection.join(roomid);
        }
        else {
            connection.open(roomid);
        }
    });
}
    

    function give_Rating() {
        if (!$("#rating").valid()) {
            console.log('error');
            return false;
        } else {

            var data = {
                rating: $('#star-sm').val(),
                userId : $('#userId').val()
            };
            console.log(data);


            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: '/dishmizer-profile/rating',

                success: function(res) {
                    
                    if (res == 'error') {
                        $('#alertMsg').html('<div class="alert alert-danger"><strong>Error Occured. Try Again</strong></div>');
                        $('#alertMsg').delay(5000).fadeOut('slow');
                        window.location.href = base_url + '/dishmizer-profile/' + data.userId;
                    } else {
                        
                        $('#alertMsg').html('<div class="alert alert-success"><strong>your Rating Added successfully.</strong></div>');
                        $('#alertMsg').delay(5000).fadeOut('slow');
                        setTimeout(function() {
                            window.location.reload();
                        }, 5000);
                    }
                }
            });
        }
    }
