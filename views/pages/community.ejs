<!DOCTYPE html>
<html lang="en">
<head>
      <% include ../partials/head %>    
</head>

<body class="sticky">
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div><!-- End Preload -->
    
    <!-- wrap Page -->
    <div id="wrap">
        
        <!-- Header Top -->
        <% include ../partials/header-top.ejs%>
        <!-- End Header Top -->
        <!-- Header -->
        <header class="style2">
             <% include ../partials/header %>     
        </header><!-- End Header -->
        <!-- SubHeader -->
        <section class="parallax-window" id="short"  data-parallax="scroll" data-image-src="/public/images/community.jpg">
            <div id="sub_header">
                <div class="container" id="sub_content">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>Community</h1>
                            <div class="bread-crums">
                                <a href="/home">Home</a>
                                <span class="bread-crums-span">&raquo;</span>
                                <span class="current">Community</span>
                            </div><!-- End bread-crums -->
                        </div>
                    </div><!-- End row -->
                </div><!-- End container -->
            </div>
        </section>
        <!-- End SubHeader -->
        <div class="white_bg">
            <div class="container margin_60">
                <div class="row">
                    <% if ( community.length > 0 ) { %>
                    <% for (var i=0; i < community.length ; i++ ) { %>
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="col-community">
                            <div class="thumb">
                                <i class="ic icon-community"></i>
                            </div>
                            <div class="inner">
                                <h3><a href="/single-topic/<%= community[i].community_id %>"><%= community[i].title %></a></h3>
                                <p><%= community[i].description %></p>
                            </div>
                        </div><!-- End col-community-->
                    </div>
                 <% }} else { %>
                 <div>No Posts Avaliable.</div>
                 <% } %>
                </div><!-- End row --> 
                
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="forumstatistics">
                            <dl class="discussionCount"><dt>Topic</dt>
                                <dd><span class="number"><%= totalComm %></span></dd></dl>
                            <dl class="messageCount"><dt>Replies</dt>
                                <dd><span class="number"><%= countTopic %></span></dd></dl>
                            <dl class="memberCount"><dt>Users</dt>
                                <dd><span class="number"><%= totalUser %></span></dd></dl>
                        </div>
                    </div>
                </div><!-- End row --> 
    
            </div><!-- End container -->
        </div><!-- End white_bg -->
        <!-- newslatter -->
        <div class="newslatter">
            <div class="container">
                <p>stay Always Updated With us. Sign in with our newsletter</p>
                <div class="subcribe">
                    <input type="text" class="form-control" placeholder="Your Email">
                    <a class="fa fa-paper-plane" href="javascript:void(0);"></a>
                </div>
            </div>
        </div><!-- End newslatter -->
        <!-- Footer -->
        <footer>
            <% include ../partials/footer %>
        </footer><!-- End Footer -->
    </div><!-- End wrap Page -->
    <!-- go-up -->
    <div class="go-up"><i class="fa fa-chevron-up"></i></div>
    <!-- End go-up -->
    
    <!-- COMMON SCRIPTS -->
    <% include ../partials/scripts %>

</body>
</html>