                                <figcaption><a href="<%= url %>"><i class="fa fa-eye"></i> <span>View recipe</span></a></figcaption>
                            </figure>
                            <div class="shortDesc">
                                <h4><a href="<%= url %>"><%= data[i].recipe_title %></a></h4>
                                
                                <div class="actions">
                                    <div class="rows">

                                    
                                            <% if (data[i].imageUrl !='') { %>
                                                 
                                                <div class="difficulty col-sm-12"><img class="img-circle" src="/public/images/userphotos/<%= data[i].imageUrl %>" alt=""><a href="/dishmizer-profile/<%= data[i].user_id %>"><span><%= data[i].firstname %> <%= data[i].lastname %></span></a></div>

                                                <% } else{ %>  
                                                    <div class="difficulty col-sm-12"><img class="img-circle" src="https://wpuploads.appadvice.com/wp-content/uploads/2014/10/facebookanon.jpg" alt=""><a href="/dishmizer-profile/<%= data[i].user_id %>"><span><%= data[i].firstname %> <%= data[i].lastname %></span></a></div>
                                                <% } %>



                                        <!-- <div class="difficulty col-sm-12"><img class="img-circle" src="<%= data[i].imageUrl %>" alt=""><a href="/dishmizer-profile/<%= data[i].user_id %>"><span><%= data[i].firstname %> <%= data[i].lastname %></span></a></div> -->
