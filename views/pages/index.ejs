        <section class="featuredRecipe margin_60">
            <div class="container">
                

                <% if (data.length > 0) { %>
                <div class="row">
                        <div class="main_title">
                                <h2 class="nomargin_top">Featured Recipes</h2>
                                <hr class="divider">
                            </div>
                    <% for(var i=0; i< data.length; i++) { %>
                    <% var url = '/single-recipes/buy/'+data[i].recipe_id; %>
